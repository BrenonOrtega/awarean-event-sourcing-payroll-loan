{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Npgsql" : "Server=db;Port=5432;Database=appdb;User Id=app_user;Password=app_password;"
  },
  "EventStoreOptions": {
    "CommitEventQuery": {
      "Query": "INSERT INTO {0} VALUES(DEFAULT, @ENTITY_ID, @CREATED_AT, @TYPE, @VERSION, CAST(@SERIALIZED_EVENT AS json));",
      "Parameters": {
        "EntityId": "@ENTITY_ID",
        "CreatedAt": "@CREATED_AT",
        "Type": "@TYPE",
        "Version": "@VERSION",
        "SerializedEvent": "@SERIALIZED_EVENT"
      }
    },
    "GetEventsQuery": {
      "Query": "SELECT ID, ENTITY_ID, CREATED_AT, VERSION, SERIALIZED_EVENT FROM {0} WHERE ENTITY_ID = @ENTITY_ID;",
      "Parameters": {
        "EntityId": "@ENTITY_ID"
      }
    }
  },
  "SnapshotOptions": {
    "GetById": {
      "Query": "SELECT * FROM {0} WHERE ID = @ID;",
      "Parameters": {
        "id": "@ID"
      }
    },
    "GetAll": {
      "Query": "SELECT * FROM {0} OFFSET @OFFSET FETCH NEXT @PAGE_SIZE ROWS ONLY;" ,
      "Parameters": {
        "offset": "@OFFSET",
        "pageSize": "@PAGE_SIZE"
      }
    }
  }
}
