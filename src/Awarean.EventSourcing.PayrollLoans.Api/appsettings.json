{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Npgsql" : "Server=db;Port=5432;Database=appdb;User Id=app_user;Password=app_password;"
  },
  "EventStoreOptions": {
    "CommitEventQuery": {
      "Query": "INSERT INTO @TABLE VALUES(@ENTITY_ID, @CREATED_AT, @TYPE, @VERSION, @SERIALIZED_EVENT);",
      "Parameters": {
        "Table": "@TABLE",
        "EntityId": "@ENTITY_ID",
        "CreatedAt": "@CREATED_AT",
        "Type": "@TYPE",
        "Version": "@VERSION",
        "SerializedEvent": "@SERIALIZED_EVENT"
      }
    },
    "GetEventsQuery": {
      "Query": "SELECT * FROM @TYPE (@ENTITY_ID, @CREATED_AT, @VERSION, @SERIALIZED_EVENT);",
      "Parameters": {
        "Table": "@TABLE",
        "EntityId": "@ENTITY_ID",
        "CreatedAt": "@CREATED_AT",
        "Type": "@TYPE",
        "Version": "@VERSION",
        "SerializedEvent": "@SERIALIZED_EVENT"
      }
    }
  },
  "SnapshotOptions": {
    "GetById": {
      "Query": "SELECT * FROM @TABLE WHERE ID = @ID;",
      "Parameters": {
        "Table": "@TABLE",
        "id": "@ID"
      }
    },
    "GetAll": {
      "Query": "SELECT * FROM @TABLE OFFSET @OFFSET FETCH NEXT @PAGE_SIZE ROWS;" ,
      "Parameters": {
        "Table":  "@TABLE",
        "offset": "@OFFSET",
        "pageSize": "@PAGE_SIZE"
      }
    }
  }
}
